@model Parc_Auto_v3.Models.Vidange

@{
    ViewData["Title"] = "Delete Vidange";
}

<h2>Supprimer Vidange</h2>

<h3>
    Êtes-vous sûr de vouloir supprimer ceci ?
</h3>
<div>
    <h4>Vidange</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date Intervention
        </dt>
        <dd class="col-sm-10">
            @Model.DateIntervention.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Type Intervention
        </dt>
        <dd class="col-sm-10">
            @Model.TypeIntervention
        </dd>
        <dt class="col-sm-2">
            Fournisseur
        </dt>
        <dd class="col-sm-10">
            @Model.Fournisseur
        </dd>
        <dt class="col-sm-2">
            NFacture
        </dt>
        <dd class="col-sm-10">
            @Model.NFacture
        </dd>
        <dt class="col-sm-2">
            Kilometrage
        </dt>
        <dd class="col-sm-10">
            @Model.Kilometrage
        </dd>
        <dt class="col-sm-2">
            Operation Details
        </dt>
        <dd class="col-sm-10">
            @Model.OperationDetails
        </dd>
        <dt class="col-sm-2">
            Montant HT
        </dt>
        <dd class="col-sm-10">
            @Model.MontantHt.ToString("C")
        </dd>
        <dt class="col-sm-2">
            Voiture
        </dt>
        <dd class="col-sm-10">
            @Model.Voiture.Matricule
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ceci ?');">
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">
            Retour à la liste
        </a>
    </form>
</div>
