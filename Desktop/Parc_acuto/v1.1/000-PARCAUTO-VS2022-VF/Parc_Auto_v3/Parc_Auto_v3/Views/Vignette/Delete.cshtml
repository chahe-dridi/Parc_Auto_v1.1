@model Parc_Auto_v3.Models.Vignette

@{
    ViewData["Title"] = "Delete Vignette";
}

<h2>
    Supprimer
    Vignette
</h2>

<h3>
    Êtes-vous sûr de vouloir supprimer ceci ?
</h3>
<div>
    <h4>Vignette</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateEchance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateEchance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateValide)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateValide)
        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrixUnitaire)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrixUnitaire)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Voiture.Matricule)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voiture.Matricule)
        </dd>
    </dl>

     


    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ceci ?');">
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">
            Retour à la liste
        </a>
    </form>
</div>
